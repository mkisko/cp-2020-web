{% extends 'admin/layout.html.twig' %}

{% block title %}Edit Skill{% endblock %}

{% block subheader %}
    <div class="subheader py-2 py-lg-6  subheader-transparent " id="kt_subheader">
        <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center flex-wrap mr-1">
                <button class="burger-icon burger-icon-left mr-4 d-inline-block d-lg-none" id="kt_subheader_mobile_toggle">
                    <span></span>
                </button>

                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <h5 class="text-dark font-weight-bold my-1 mr-5">Изменение навыка</h5>

                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a class="text-muted">Главная</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a class="text-muted">Модератор</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a class="text-muted">Изменение навыка</a>
                        </li>
                    </ul>
                </div>
            </div>


            <div class="d-flex align-items-right">
                {{ include('admin/skill/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card gutter-b">
            <div class="card-body">
                <form method="post">
                    <div class="form-group">
						<label>Название навыка</label>
						<input type="text" class="form-control" name="skill[title]" value="{{ form.vars.value.title }}">
						<span class="form-text text-muted">Это название будет показано везде где используются навыки</span>
					</div>

                    {{ form_widget(form._token) }}

                    <button class="btn btn-primary" type="submit">Обновить</button>
                </form>
            </div>
        </div>

        <a href="{{ path('skill_index') }}" class="btn btn-success">Назад к списку навыков</a>
    </div>
{% endblock %}
