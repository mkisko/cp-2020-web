{% endblock %}

{% block body %}
    <div class="container">
        <div class="card card-custom p-6 gutter-b">
            <div class="card-body">
                <h2 class="text-dark mb-8">{{ user_stage_progress.status }}</h2>

                <h4 class="font-weight-bold text-dark mb-4">Описание</h4>
                <div class="text-dark-50 line-height-lg mb-8">
                    <p>Этап {{ user_stage_progress.stage.title }}</p>
                </div>
            </div>

            <div class="card-footer d-flex">
                <a href="{{ path('user_stage_progress_edit', {'id': user_stage_progress.id}) }}" class="btn btn-primary mr-3">Изменить</a>

                {{ include('admin/user_stage_progress/_delete_form.html.twig') }}
            </div>
        </div>

        <a href="{{ path('user_stage_progress_index') }}" class="btn btn-success">Назад к списку вакансий</a>
    </div>
{% endblock %}