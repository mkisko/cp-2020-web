{% extends 'base.html.twig' %}

{% block title %}Авторизация{% endblock %}

{% block stylesheets %}
    <link href="assets/css/pages/login/login-2.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block header %}<!-- hidden-->{% endblock %}

{% block body %}
    <div class="login login-2 login-signin-on d-flex flex-column flex-lg-row flex-column-fluid bg-white" id="kt_login">
        <div class="login-aside order-2 order-lg-1 d-flex flex-row-auto position-relative overflow-hidden">
            <div class="d-flex flex-column-fluid flex-column justify-content-between py-9 px-7 py-lg-13 px-lg-35">
                <a href="#" class="text-center pt-2">
                <!--    <img src="assets/media/logos/logo.png" class="max-h-75px" alt="" /> -->
                </a>

                <div class="d-flex flex-column-fluid flex-column flex-center">
                    <div class="login-form login-signin py-11">
                        <form class="form" novalidate="novalidate" id="kt_login_signup_form" method="post">
                            <div class="text-center pb-8">
                                <h2 class="font-weight-bolder text-dark font-size-h2 font-size-h1-lg">
                                    Авторизуйтесь
                                </h2>
                                <span class="text-muted font-weight-bold font-size-h4">или <a href="{{ path('app_register') }}" class="text-primary font-weight-bolder">зарегистрируйтесь</a></span>
                            </div>

                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="form-group">
                                <input class="form-control form-control-solid h-auto py-7 px-6 rounded-lg font-size-h6" type="email" placeholder="Ваша электронная почта" name="email" autocomplete="off" />
                            </div>

                            <div class="form-group">
                                <input class="form-control form-control-solid h-auto py-7 px-6 rounded-lg font-size-h6" type="password" placeholder="Ваш пароль" name="password" autocomplete="off" />
                            </div>

                            <div class="form-group d-flex flex-wrap flex-center pb-lg-0 pb-3">
                                <button type="submit" class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mx-4">Авторизоваться</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="content order-1 order-lg-2 d-flex flex-column w-100 pb-0" style="background-color: #B1DCED;">
            <div class="d-flex flex-column justify-content-center text-center pt-lg-40 pt-md-5 pt-sm-5 px-lg-0 pt-5 px-7">
                <h3 class="display4 font-weight-bolder my-7 text-dark" style="color: #986923;">Цифровой прорыв 2020
                </h3>
                <p class="font-weight-bolder font-size-h2-md font-size-lg text-dark opacity-70">
                    Кейс СКФУ <br />
                    Команда GC.Platform
                </p>
            </div>

            <div class="content-img d-flex flex-row-fluid bgi-no-repeat bgi-position-y-bottom bgi-position-x-center"
                style="background-image: url(assets/media/svg/illustrations/login-visual-2.svg);"></div>
        </div>
    </div>
{% endblock %}
